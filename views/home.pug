extends layout

block content

  .jumbotron
    .container
      if !user
        .jumbotron_content
          .row
            .col-xs-12.col-md-6
                img.img-responsive(src='logo.png')
            .col-xs-12.col-md-6
              .registration-form
                .registration-form_header
                  h3 Regístrate
                .registration-form_body
                  form(id='signup-form', method="POST").form
                    input(type='hidden', name='_csrf', value=_csrf)
                    .form-group
                      .row
                        .col-md-6
                          input.form-control(type="text" name="username" placeholder="Nombre")
                        .col-md-6
                          input.form-control(type='password', name='password', id='password', placeholder='Contraseña', required)
                    .form-group
                      input.form-control(type='email', name='email', id='email', placeholder='Email', required)
                    button.btn.btn-success(type='submit')
                      i.fa.fa-user-plus
                      | Registrarse
                    //- TODO: CHECK WTF HAPPENS THAT CRASHES THE APP
                    //- .row
                    //-   .col-sm-offset-3.col-sm-3
                    //-     a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
                    //-       i.fa.fa-facebook
                    //-       | Registrar con Facebook
                    //-     a.btn.btn-block.btn-google.btn-social(href='/auth/google')
                    //-       i.fa.fa-google-plus
                    //-       | Registrar con Google
      else
        .jumbotron
          .row
            .col-xs-12.col-md-6.col-sm-offset-3
                img.img-responsive(src='logo.png')
                .form-group
                  form(action='/search', method="GET")
                    input.form-control.main-search(type='text' name='search' placeholder='Buscar materias, temas, ejercicios, videos..')

  .section(style="margin: 100px 0")
    .container
      h2.text-center(style="font-size: 28px") Matemática, Física y Química, te la ponemos fácil!

  .section(style="margin: 100px 0")
