block content

  .jumbotron
    .container
      .jumbotron_content
        .row
          .col-xs-6.text-center
              img.img-responsive(src='logo.png' style="margin: 30px auto 20px")
          .col-xs-12.col-md-6
            .registration-form
              .registration-form_header
                h3 Regístrate
              .registration-form_body
                form(method="GET", action="/search").form
