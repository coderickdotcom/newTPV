                    .row
                      .col-md-6
                        input.form-control(type="text" name="username" placeholder="Nombre")
                      .col-md-6
                        input.form-control(type="password" name="password" placeholder="Contrasena")
                  .form-group
                    input.form-control(type="email" name="email" placeholder="correo electronico")
                  input.form-control(type="submit" value="Enviar")
