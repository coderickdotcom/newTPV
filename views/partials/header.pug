.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        | Tu Profesor Virtual
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Inicio
        li(class=(title == 'Nuevos Videos') ? 'active' : undefined)
          a(href='/videos') Materias
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='/contact') Contacto
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Iniciar Sesion
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Registrarse
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if (user.profile.access == 'maestro')
                li
                  a(href='/maestros') Area de Maestros.
                  //- TODO: CREAR ESTRUCTURA PARA AREA DE MAESTROS
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') Mi Cuenta
              li.divider
              li
                a(href='/logout') Salir
