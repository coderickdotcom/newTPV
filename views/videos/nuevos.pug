extends ../layout

block content
  .section(style="margin: 50px 0")
    .container
      h2 Materias
      p(style="margin-top: 25px") Nuestra libreria completa de videos, aquí encontrarás todo lo que necesites para aprender.

  .section(style="margin: 50px 0")
    .container
      .row
        .grid

          for block in data

            .col-sm-6.col-md-4
              .bloque
                .bloque_top(style="background-color: " + block.color)
                  .bloque_top_materia
                    a(href="#0") #{block.subject}
                .bloque_content
                  h3.bloque_content_title
                    a(href="#0") #{block.title}
                  p.bloque_content_desc
                    | #{block.description}
                .bloque_bottom.clearfix
                  span.bloque_number-of-videos
                    | #{block.videoNumber}
                  span.bloque_total-duration
                    | #{block.totalTime}
