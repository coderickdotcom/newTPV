extends ../layout

block content
  .container
    .page-header
      h3 Información de Usuario

    form.form-horizontal(action='/account/profile', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.col-sm-3.control-label(for='email') Email
        .col-sm-7
          input.form-control(type='email', name='email', id='email', value=user.email)
      .form-group
        label.col-sm-3.control-label(for='name') Nombre
        .col-sm-7
          input.form-control(type='text', name='name', id='name', value=user.profile.name)
      .form-group
        label.col-sm-3.control-label Sexo
        .col-sm-6
          label.radio.col-sm-3
            input(type='radio', checked=user.profile.gender=='male', name='gender', value='male', data-toggle='radio')
            span Masculino
          label.radio.col-sm-3
            input(type='radio', checked=user.profile.gender=='female', name='gender', value='female', data-toggle='radio')
            span Femenino
          label.radio.col-sm-3
            input(type='radio', checked=user.profile.gender=='other', name='gender', value='other', data-toggle='radio')
            span Otro
      .form-group
        label.col-sm-3.control-label(for='location') Nacionalidad
        .col-sm-7
          input.form-control(type='text', name='location', id='location', value=user.profile.location)
      .form-group
        label.col-sm-3.control-label(for='website') Instagram / Twitter
        .col-sm-7
          input.form-control(type='text', name='website', id='website', value=user.profile.website)
      .form-group
        .col-sm-offset-3.col-sm-4
          button.btn.btn.btn-primary(type='submit')
            i.fa.fa-pencil
            | Guardar Cambios

    .page-header
      h3 Realizar pago de subscripcion
    .row
      .col-sm-4
        a(href='/api/paypal', style='color: #000')
          .panel.panel-default(style='background-color: #f5f5f5')
            .panel-body
              img(src='http://i.imgur.com/JNc0iaX.png', height=40)
              |  Realizar pago con PayPal
      //- TODO: CONECTAR EL API DE MERCADOPAGO
      .col-sm-4
        a(href='/api/mercadopago' style='color: #000')
          .panel.panel-default(style='background-color: #C2E9F9')
            .panel-body
              img(src='https://lh3.googleusercontent.com/HLz5lNWaMwgYA83-bNmw4Gd4ftUDoBetEFgrcTkLbmI69QEGdFG2rEcxLP2SYzV64w=w300', height=40)
              |  Realizar pago con Mercado Pago
    .page-header
      h3 Cambiar Contraseña

    form.form-horizontal(action='/account/password', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.col-sm-3.control-label(for='password') Nueva Contraseña
        .col-sm-7
          input.form-control(type='password', name='password', id='password')
      .form-group
        label.col-sm-3.control-label(for='confirmPassword') Confirmar Contraseña
        .col-sm-7
          input.form-control(type='password', name='confirmPassword', id='confirmPassword')
      .form-group
        .col-sm-offset-3.col-sm-4
          button.btn.btn-primary(type='submit')
            i.fa.fa-lock
            | Cambiar
    .page-header
      h3 Borrar Cuenta

    form.form-horizontal(action='/account/delete', method='POST')
      .form-group
        p.col-sm-offset-3.col-sm-4 Ten en cuenta que esta operación es <strong>irreversible</strong>.
        input(type='hidden', name='_csrf', value=_csrf)
        .col-sm-offset-3.col-sm-4
          button.btn.btn-danger(type='submit')
            i.fa.fa-trash
            | Borrar mi cuenta
